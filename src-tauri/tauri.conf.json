{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Betfair Stream API Proxy",
  "version": "1.0.12",
  "identifier": "com.savostin.betfair-stream-proxy",
  "build": {
    "beforeDevCommand": "cd ui && npm run dev",
    "beforeBuildCommand": "cd ui && npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Betfair Markets",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
